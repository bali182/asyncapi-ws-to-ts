{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2017.object"
    ],
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "declaration": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*",
    "./src-new/**/*",
  ]
}
